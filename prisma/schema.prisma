// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Game {
  id          String   @id @default(uuid())
  name        String   @unique
  image_url   String   @db.Text
  description String   @db.Text
  players     String
  playtime    String
  mechanics   String   @db.Text
  categories  String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Player {
  id                        String                      @id @default(uuid())
  name                      String
  nickname                  String?
  clerkId                   String
  createdAt                 DateTime                    @default(now())
  updatedAt                 DateTime                    @updatedAt
  PlayerGameSessionJunction PlayerGameSessionJunction[]
  GameGroup                 GameGroup?                  @relation(fields: [groupId], references: [id])
  groupId                   String?

  @@unique(clerkId)
}

model GameGroup {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Player    Player[]
}

model PlayerGameSessionJunction {
  id            String      @id @default(uuid())
  player        Player      @relation(fields: [playerId], references: [id])
  playerId      String
  position      Int?
  score         String?
  gameSession   GameSession @relation(fields: [gameSessionId], references: [id])
  gameSessionId String
}

model GameSession {
  id                        String                      @id @default(uuid())
  gameId                    String
  groupId                   String                      @default("game-night")
  result                    String?
  status                    String
  createdAt                 DateTime                    @default(now())
  updatedAt                 DateTime                    @updatedAt
  PlayerGameSessionJunction PlayerGameSessionJunction[]
}
